const navEL = document.querySelector('.navbar')
 window.addEventListener('scroll', () => {
  if(window.scrollY > 50) {
    navEL.classList.add('navbar-onScroll');
  } else if(window.scrollY < 50){
    navEL.classList.remove('navbar-onScroll')
  }
 });
</script>

